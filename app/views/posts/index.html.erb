<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table class="post-index">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th colspan="3" class="actions">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.author.email %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) if true || policy(post).update?%></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } if true || policy(post).destroy? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
